/* pages/my/my.wxss */
page {
  height: 100vh;
  background-color: #faf7f7;
}
/* 登录 */
.login-container {
  height: 750rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #e54847;
  position: relative;
  overflow: hidden;
}

.login-container image {
  width: 180rpx;
  height: 180rpx;
  background: #faf7f7;
  border-radius: 50%;
  border: 1px solid #faf7f7;
}

.login-container::after {
  content: ' ';
  display: block;
  width: 100%;
  height: 40px;
  background-color: #faf7f7;
  position: absolute;
  bottom: 0;
  left: 0;
  border-radius: 100%;
  transform: translateY(50%);
}

.btn-login:not([size='mini']) {
  width: 90%;
  border-radius: 100px;
  margin-top: 15px;
  background-color: #faf7f7;
  color: #000;
}
.btn-login:not([size='mini']):nth-child(3) {
  margin-bottom: 15px;
} 

.tips-text {
  font-size: 12px;
  color: #faf7f7;
}

/* 个人页面 */
.my-userinfo-container{
  height: 100%;
  background: #faf7f7;
}

.top-box {
  height: 400rpx;
  background: #e54847;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.avatar {
  width: 90px;
  height: 90px;
  border-radius: 45px;
  border: 1px solid #faf7f7;
  box-shadow: 0 1px 5px black;
}

.nickname {
  font-size: 16px;
  color: #fff;
  font-weight: bold;
  margin-top: 10px;
}

.panel-list {
  padding: 0 10px;
  position: relative;
  top: -10px;
}

.panel{
  background-color: white;
  border-radius: 3px;
  margin-bottom: 8px;
}

.panel-title {
  line-height: 45px;
  padding-left: 10px;
  font-size: 15px;
  border-bottom: 1px soild #f4f4f4;
}

.panel-body {
  display: flex;
  justify-content: space-around;
}

.panel-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  padding: 10px 0;
  font-size: 13px;
}

.icon {
  width: 35px;
  height: 35px;
  margin-bottom: 15rpx;
}

.panel-list-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 15px;
  padding: 0 10px;
  line-height: 45px;
}